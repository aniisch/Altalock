# Configuration Email AltaLock
# Copiez ce fichier en .env et remplissez vos valeurs


# Clé secrète Flask (générer une clé unique en production)
SECRET_KEY=altalock-dev-key-change-in-production

# Mode debug (True/False)
DEBUG=False

# Configuration SMTP pour les alertes email
SMTP_SERVER=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=noreply@anis-chaarana.fr
SMTP_PASSWORD=VOTRE_MOT_DE_PASSE_ICI

# Email destinataire des alertes (où recevoir les notifications)
ALERT_EMAIL=tonemail@email.com

# Paramètres de reconnaissance faciale
FACE_TOLERANCE=0.8
FRAME_SKIP=2
DETECTION_THRESHOLD=4

# Caméra
CAMERA_INDEX=0

# Verrouillage automatique
AUTO_LOCK=True
