# Configuration AltaLock
# Copier ce fichier en .env et ajuster les valeurs

# Clé secrète Flask (générer une clé unique en production)
SECRET_KEY=altalock-dev-key-change-in-production

# Mode debug (True/False)
DEBUG=True

# Configuration SMTP pour les alertes email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre-email@gmail.com
SMTP_PASSWORD=votre-mot-de-passe-app

# Paramètres de reconnaissance faciale
FACE_TOLERANCE=0.6
FRAME_SKIP=2
DETECTION_THRESHOLD=4

# Caméra
CAMERA_INDEX=0

# Verrouillage automatique
AUTO_LOCK=True
